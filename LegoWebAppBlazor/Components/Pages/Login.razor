@page "/login"
@inject SupabaseAuthService Auth
@inject AuthStateService AuthState
@inject NavigationManager Nav

<PageTitle>Login</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="mb-4">Login</h1>

        @if (_errorMessage is not null)
        {
            <div class="alert alert-danger">@_errorMessage</div>
        }

        @if (_successMessage is not null)
        {
            <div class="alert alert-success">@_successMessage</div>
        }

        <EditForm Model="_loginModel" OnValidSubmit="HandleLogin" FormName="login">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label class="form-label">Email</label>
                <InputText @bind-Value="_loginModel.Email" class="form-control" type="email" />
                <ValidationMessage For="() => _loginModel.Email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <InputText @bind-Value="_loginModel.Password" class="form-control" type="password" />
                <ValidationMessage For="() => _loginModel.Password" />
            </div>

            <button type="submit" class="btn btn-primary w-100" disabled="@_loading">
                @(_loading ? "Logging in..." : "Login")
            </button>
        </EditForm>

        <p class="mt-3 text-center">
            Don't have an account? <a href="/signup">Sign up</a>
        </p>
    </div>
</div>

@code {
    private LoginFormModel _loginModel = new();
    private string? _errorMessage;
    private string? _successMessage;
    private bool _loading;

    // If signup redirected here with a message, show it
    [SupplyParameterFromQuery(Name = "message")]
    private string? Message { get; set; }

    protected override void OnInitialized()
    {
        if (AuthState.IsLoggedIn())
        {
            Nav.NavigateTo("/");
            return;
        }

        if (Message is not null)
            _successMessage = Message;
    }

    private async Task HandleLogin()
    {
        _errorMessage = null;
        _loading = true;

        AuthResult? result = await Auth.LoginAsync(_loginModel.Email, _loginModel.Password);

        if (!result.Success || result.Token == null)
        {
            _errorMessage = result.ErrorMessage ?? "Login failed.";
            _loading = false;
            return;
        }

        // Store the JWT and navigate to collection
        AuthState.Login(result.Token!);
        Nav.NavigateTo("/");
    }

    private class LoginFormModel
    {
        [Required, EmailAddress]
        public string Email { get; set; } = "";

        [Required]
        public string Password { get; set; } = "";
    }
}
